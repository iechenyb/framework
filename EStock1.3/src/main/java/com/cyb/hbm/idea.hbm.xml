<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
      
<hibernate-mapping package="com.cyb.qutoes.vo">  
<class name="Idea" table="IDEA">  
     <!-- 设置该持久化类的二级缓存并发访问策略 
     read-only 
     read-write 
     nonstrict-read-write 
     transactional-->
     <!-- <cache usage="read-write"/>  -->   
    <id name="id" type="java.lang.String" column="id_">  
       <generator class="uuid.hex" />  
    </id>  
   <property  
        name="userType"  
        type="java.lang.Long"  
        column="userType"  
        length="64"  
    />  
   <property  
        name="phone"  
        type="java.lang.String"  
        column="phone"  
        length="50"  
    />  
      <property  
        name="email"  
        type="java.lang.String"  
        column="email"  
        length="50"  
    />  
     <property  
        name="ideaType"  
        type="java.lang.Long"  
        column="ideaType"  
        length="50"  
    />  
     <property  
        name="message"  
        type="java.lang.String"  
        column="message"  
        length="2000"  
    />  
     <property  
        name="fileId"  
        type="java.lang.String"  
        column="fileId"  
        length="50"  
    />  
     <property  
        name="submitTime"  
        type="java.lang.Long"  
        column="submitTime"  
        length="50"  
    />  
</class>  
