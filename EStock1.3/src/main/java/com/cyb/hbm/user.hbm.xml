<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
      
<hibernate-mapping package="com.cyb.qutoes.vo" >  
<class name="User" table="usr" dynamic-update="true" lazy="false">  
     <!-- 启用二级缓存 缓存策略为read-write -->  
     <!-- <cache usage="read-write"/>   -->
     <!-- <cache usage="read-only"/> -->
     <!-- 二级缓存一般设置为只读的 -->
      <cache usage="read-only"/> 
    <id name="id" type="java.lang.String" column="id_">  
       <generator class="uuid.hex" />  
    </id>  
     <!-- 映射集合属性  --> 
 	<!-- <set name="addresses" table="person_address" lazy="true">  -->
   <property  
        name="username"  
        type="java.lang.String"  
        column="username"  
        length="50"  
    />  
   <property  
        name="password"  
        type="java.lang.String"  
        column="password"  
        length="50"  
    />  
      <property  
        name="roleId"  
        type="java.lang.Long"  
        column="roleId"  
        length="1"  
    />  
     <property  
        name="loginstatus"  
        type="java.lang.Long"  
        column="loginstatus"  
        length="1"  
    />  
     <property  
        name="registerTime"  
        type="java.lang.Long"  
        column="registerTime"  
        length="14"  
    />  
     <property  
        name="status"  
        type="java.lang.Long"  
        column="status"  
        length="1"  
    />  
     <property  
        name="phone"  
        type="java.lang.Long"  
        column="phone"  
        length="11"  
    />  
    <property  
        name="email"  
        type="java.lang.String"  
        column="email"  
        length="50"  
    />  
</class>  

